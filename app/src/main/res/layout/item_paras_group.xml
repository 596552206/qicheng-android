<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_space_x2"
    android:paddingRight="@dimen/common_space_x2"
    android:paddingTop="@dimen/common_space"
    android:paddingBottom="@dimen/common_space">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_paras_group_user"
        android:text="第1段 · MilezChen · 于刚才"
        android:textColor="@color/ligold"
        android:singleLine="true"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_paras_group_content"
        android:textColor="@color/dark"
        android:textSize="14sp"
        android:lineSpacingExtra="7sp"/>
</LinearLayout>
</android.support.v7.widget.CardView>