<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/item_grouplist_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="88765"
                        android:gravity="center"
                        android:textColor="@color/brown"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/item_grouplist_member_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="组员：3/12"
                        android:gravity="center"
                        android:textColor="@color/migold"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/item_grouplist_id_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="ID:88765"
                        android:gravity="center"
                        android:textColor="@color/migold"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/item_grouplist_paranum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="65段"
                        android:gravity="center"
                        android:textColor="@color/migold"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_grouplist_content_tv"
            android:textColor="@color/dark"
            android:textSize="14sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>