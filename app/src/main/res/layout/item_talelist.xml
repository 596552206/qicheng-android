<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_talelist_avatar_sdv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="8dp"
                fresco:roundedCornerRadius="50dp"
                fresco:placeholderImage="@mipmap/hiddenface"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/item_talelist_nick_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="hahaha"
                        android:gravity="center"
                        android:textColor="@color/brown"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/item_talelist_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="hahaha"
                        android:gravity="center"
                        android:textColor="@color/migold"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/item_talelist_paranum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="hahaha"
                        android:gravity="center"
                        android:textColor="@color/brown"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/item_talelist_tags_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="hahaha"
                        android:gravity="center"
                        android:textColor="@color/brown"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_talelist_content_tv"
            android:textColor="@color/dark"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>