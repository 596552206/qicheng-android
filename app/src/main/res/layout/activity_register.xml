<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="14dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="14dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="me.milechen.qicheng.Activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/register_avatar_sdv"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/qicheng_cholote" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_welcome_tv_tv"
            android:textSize="16sp"
            android:text="欢迎小朋友入坑"
            android:textColor="@color/brown"
            android:gravity="center"
            android:layout_marginTop="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.7">

        <EditText
            android:id="@+id/register_phone_et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="14dp"
            android:hint="手机号码"
            android:maxLength="11"
            android:inputType="phone" />

        <EditText
            android:id="@+id/register_nick_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:hint="用户名"
            android:inputType="text" />

        <EditText
            android:id="@+id/register_password_et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="28dp"
            android:hint="密码"
            android:inputType="textVisiblePassword"
            android:maxLines="1" />

        <Button
            android:id="@+id/register_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/ligold"
            android:textColor="@color/light"
            android:textSize="20sp"
            android:text="注册" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_weight="1">

            <TextView
                android:id="@+id/register_about_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="了解起承"
                android:gravity="left"
                android:textColor="@color/brown"
                android:textSize="16sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/register_login_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已经注册？登陆"
                android:textColor="@color/brown"
                android:textSize="16sp"
                android:gravity="right"
                android:layout_weight="1" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
