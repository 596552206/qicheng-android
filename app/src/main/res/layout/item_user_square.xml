<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="96dp"
    android:layout_height="96dp"
    android:layout_margin="@dimen/common_space_x2">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_user_avatar_sdv"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitXY"
        fresco:roundedCornerRadius="50dp"
        fresco:placeholderImage="@mipmap/hiddenface"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/item_user_nick_tv"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:text="hahahahaha"
        android:gravity="center"
        android:textColor="@color/brown"
        android:textSize="14sp"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>