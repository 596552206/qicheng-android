<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.milechen.qicheng">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".QichengApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".Activities.QiActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.TaleActivity" />
        <activity android:name=".Activities.ChengActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".Activities.GroupActivity" />

        <service android:name=".Services.QichengIntentService" />
        <service android:name=".Services.PushService" />

        <activity android:name=".Activities.UserActivity" />
        <activity android:name=".Activities.GraleActivity" />
        <activity android:name=".Activities.ChengGroupActivity" />
        <activity android:name=".Activities.SearchGroupActivity" />
        <activity android:name=".Activities.CreateGroupActivity" />
        <activity android:name=".Activities.InfoGroupActivity"></activity>
    </application>

</manifest>